{
    // Based of https://github.com/mwinters-stuff/vscode-devcontainer-raspberrypi-pico/blob/main/.devcontainer/devcontainer.json.
    "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
    "name": "tropic-rs-devcontainer",
    "image": "tropic-rs-devcontainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--privileged",
        "--group-add=keep-groups",
        "-v",
        "/dev/bus/usb:/dev/bus/usb",
        "--device=/dev/bus/usb",
        "--device=/dev/ttyACM0",
        "--device=2e8a:000c"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "BarbossHack.crates-io",
                // https://probe.rs/docs/tools/debugger/
                "probe-rs.probe-rs-debugger"
            ]
        }
    }
}